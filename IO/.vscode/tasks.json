{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc-5 build active file",
            "command": "/usr/bin/gcc-5",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}